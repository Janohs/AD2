<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <style>
      body {
          font-family: 'Helvetica Neue', Arial, sans-serif;
          margin: 0;
          padding: 0;
          background: linear-gradient(to bottom right, #FF921A, #F2F4F7);
          color: #333;
      }

      h1 {
          color: #fff;
          margin-bottom: 16px;
          font-size: 2.5rem;
          font-weight: bold;
          text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
      }

      p {
          font-size: 1.1rem;
          color: #4A5568;
          margin: 8px 0;
      }

      .dashboard-container {
          min-height: 100vh;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          padding: 20px;
      }

      .dashboard-header {
          text-align: center;
          margin-bottom: 40px;
      }

      .dashboard-content {
          width: 100%;
          max-width: 900px;
          padding: 20px;
          background: white;
          border-radius: 16px;
          box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      }

      .admin-buttons {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
          gap: 20px;
          margin-top: 20px;
      }

      button.btn {
          display: inline-block;
          width: 100%;
          padding: 15px 20px;
          font-size: 1rem;
          font-weight: bold;
          border: none;
          border-radius: 8px;
          cursor: pointer;
          transition: transform 0.2s, box-shadow 0.2s ease-in-out;
      }

      button.btn-primary {
          background-color: #FF921A;
          color: white;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      button.btn-primary:hover {
          background-color: #e37609;
          transform: translateY(-3px);
          box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
      }

      button.btn-danger {
          background-color: #e63946;
          color: white;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      button.btn-danger:hover {
          background-color: #d9303c;
          transform: translateY(-3px);
          box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
      }

      .logout-btn-container {
          text-align: center;
          margin-top: 30px;
      }

      /* Decorative Boxes */
      .highlight-box {
          display: flex;
          align-items: center;
          justify-content: center;
          flex-direction: column;
          text-align: center;
          padding: 20px;
          background-color: #f9fafb;
          border: 1px solid #FF921A;
          border-radius: 12px;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
          transition: transform 0.2s;
      }

      .highlight-box:hover {
          transform: scale(1.05);
      }

      .stats-number {
          font-size: 2.5rem;
          font-weight: bold;
          color: #FF921A;
          margin-bottom: 8px;
      }
  </style>
</head>
<body>
<div class="dashboard-container">
  <!-- Dashboard Header -->
  <div class="dashboard-header">
    <h1>Admin Dashboard</h1>
    <p style="color: aliceblue">Welcome back, <%= @admins.AdminName %>! Ready to manage?</p>
  </div>

  <!-- Main Dashboard Content -->
  <div class="dashboard-content">
    <!-- Site Statistics -->
    <div class="admin-stats">
      <div class="grid-container admin-buttons">
        <div class="highlight-box">
          <span class="stats-number"><%= @student_count %></span>
          <p>Total Users</p>
        </div>
        <div class="highlight-box">
          <span class="stats-number"><%= @unique_classes_count %></span>
          <p>Current Classes</p>
        </div>
        <div class="highlight-box">
          <span class="stats-number"><%= @unverified_merits_count %></span>
          <p>Unverified Merits</p>
        </div>
      </div>
    </div>

    <!-- Functional Buttons Section -->
    <div class="admin-buttons">
      <%= button_to 'Verify Merit-Demerit', verify_merit_demerit_admins_path, method: :get, class: "btn btn-primary" %>
      <%= button_to 'Class Ranking', class_ranking_admins_path, method: :get, class: "btn btn-primary" %>
      <%= button_to 'Verify Payment', verify_payment_admins_path, method: :get, class: "btn btn-primary" %>
    </div>
  </div>

  <!-- Logout Button -->
  <div class="logout-btn-container">
    <%= button_to 'Logout', admin_logout_path, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
</body>
</html>